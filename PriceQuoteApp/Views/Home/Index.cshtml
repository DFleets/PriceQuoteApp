@model PriceQuoteAppModel
@{
    ViewBag.Title = "Price Quotation";
}
<div class=" container">
    <header class="jumbotron"> 
        <h1 class="mt-3"style="color:darkblue">@ViewBag.Title</h1>
   </header>
    <main class="container">    
            <form asp-action="Index" method="post" class="form-horizontal">
                
                    <div class="row">
                        <label asp-for="SubTotal" class="control-label col-sm-3">Subtotal:</label>                      
                        <input asp-for="SubTotal" class="form-control col-sm-3" />
                        <span asp-validation-for="SubTotal" class="text-danger col"></span>
                    </div>
                    <div class="row">
                        <label asp-for="DiscountPercent" class="control-label col-sm-3">Discount Percent:</label>
                        <input asp-for="DiscountPercent" class="form-control col-sm-3" />
                        <span asp-validation-for="DiscountPercent" class="text-danger col"></span>
                    </div>
                
                <div class="row">
                    <label class="control-label col-sm-3">Discount amount:</label>
                    <span class="form-control col-sm-3">@Model.DiscountAmount</span>
                </div>

                <div class="row">
                    <label class="control-label col-sm-3" >Total:</label>

                    <span class="form-control col-sm-3">@Model.Total</span>
                </div>
                <button class="btn btn-primary" type="submit">Calculate</button>
                <a asp-action="Index">Clear</a>
            </form>      
    </main>
</div>
